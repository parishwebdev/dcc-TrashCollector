@model IEnumerable<DCC_TrashCollector.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.City.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day.DayChoosen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pickedup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraPickUpDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempEndDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AddressLine)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day.DayChoosen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pickedup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraPickUpDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }) |
                @Html.ActionLink("Details", "Details") |
                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId })
            </td>
        </tr>
        }

    </table>
</div>